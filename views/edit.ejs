<%include ../views/partials/header %>
<div class ="row">
        <!-- Splitting the page to left and right half -->
        <div class="col-md-6">
    <!-- --------Form Code starts between these lines-------- -->

    <form method="post" action="/todo/edit/<%= todo._id %>">
        <div class="form-group"> 
            <label>Topic </label>
                <input class="form-control" type="text" name="text" placeholder="Add Topic" value= "<%= todo.text %>">
        </div>
        <div class="form-group">
            <label>Having second thoughts??</label>
                <textarea class="form-control" name="body" placeholder="Write your review..."><%= todo.body %></textarea> 
        </div>
        <br>
        <button class="waves-effect waves-light btn #42a5f5 blue lighten-1" type="submit">Submit</button>
        <a class="btn btn-outline-danger" href="/">Cancel</a>
        </form>


    <!-- --------Form Code ends between these lines-------- -->
    </div>

<%include ../views/partials/footer %>